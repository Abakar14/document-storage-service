<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="506.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bytmasoft.sms.student.controller.StudentController">
   <children>
      <BorderPane prefHeight="506.0" prefWidth="820.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <BorderPane BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <center>
                  <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
                     <content>
                        <VBox>
                           <children>
                              <AnchorPane fx:id="rootContent" style="-fx-background-color: #BBDEFB;" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </center>
            </BorderPane>
         </center>
         <top>
            <BorderPane prefHeight="122.0" prefWidth="200.0" style="-fx-background-color: #2770E4;" BorderPane.alignment="CENTER">
               <left>
                  <ImageView fx:id="schoolLogoImageView" fitHeight="152.0" fitWidth="195.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                     <image>
                        <Image url="@../../images/logo_4.png" />
                     </image>
                  </ImageView>
               </left>
               <center>
                  <Label fx:id="moduleNameLabel" prefHeight="30.0" prefWidth="448.0" text="Student Module" textFill="WHITE" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </center>
            </BorderPane>
         </top>
         <left>
            <VBox prefHeight="358.0" prefWidth="144.0" style="-fx-background-color: #2770E4; -fx-background-radius: 0 30 30 0;" BorderPane.alignment="CENTER">
               <children>
                  <MenuButton fx:id="studentMenuButton" contentDisplay="CENTER" lineSpacing="5.0" mnemonicParsing="false" prefHeight="90.0" prefWidth="144.0" text="Students">
                    <items>
                      <MenuItem fx:id="showStudentsMenuItem" mnemonicParsing="false" onAction="#showStudents" text="Show All Students">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/view_list_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                      <MenuItem fx:id="addStudentsMenuItem" mnemonicParsing="false" onAction="#addNewStudent" text="Add New Student">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/person_add_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                        <MenuItem fx:id="searchStudent" mnemonicParsing="false" onAction="#searchStudent" text="Search Student">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/search_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                    </items>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </MenuButton>
                  <MenuButton fx:id="classesMenuButton" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0" lineSpacing="5.0" mnemonicParsing="false" prefHeight="90.0" prefWidth="144.0" text="Classes">
                     <items>
                        <MenuItem fx:id="showClassesMenuItem" mnemonicParsing="false" onAction="#showClasses" text="Show All Classes">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/view_list_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                        <MenuItem fx:id="addStudentToClassMenuItem" mnemonicParsing="false" onAction="#addStudentToClass" text="Add Student To Class">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/class_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                        <MenuItem fx:id="viewAllStudentsInClasseMenuItem" mnemonicParsing="false" onAction="#viewAllStudentsForAClass" text="View Students Class">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../images/icons/list_black_18dp.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </MenuItem>
                     </items>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </MenuButton>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
